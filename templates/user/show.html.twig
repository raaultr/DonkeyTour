{% extends 'base.html.twig' %}

{% block title %}Perfil de {{ user.nombre }} - DonkeyTour{% endblock %}

{# CONTENIDO REUTILIZABLE #}
{% block user_show_content %}
<div class="bg-[#FCFAF7] min-h-screen p-8 flex justify-center pt-12 md:pt-20">
    <div class="bg-white w-full max-w-3xl h-fit rounded-[3rem] shadow-xl overflow-hidden border border-stone-100">
        
        {# Cabecera del Perfil #}
        <div class="bg-[#3E2F28] p-10 text-white flex flex-col md:flex-row items-center gap-6">
            <div class="w-24 h-24 bg-[#8B5E3C] rounded-full flex items-center justify-center text-4xl shadow-inner">
                {{ user.nombre|first|upper }}
            </div>
            <div class="text-center md:text-left">
                <h1 class="text-3xl font-serif font-bold">{{ user.nombre }}</h1>
                <p class="text-stone-400 text-sm tracking-widest uppercase mt-1">
                    {{ user.roles[0] == 'ROLE_ADMIN' ? 'Administrador' : 
                    (user.roles[0] == 'ROLE_EMPLOYEE' ? 'Empleado' : 
                    (user.roles[0] == 'ROLE_CLIENT' ? 'Cliente' : 'Usuario')) }}
                </p>           
            </div>
        </div>

        {# Información Detallada #}
        <div class="p-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
                {# Email #}
                <div class="flex items-start gap-4">
                    <div class="p-3 bg-stone-50 rounded-xl text-[#8B5E3C]">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-stone-400 uppercase tracking-wider">Email</p>
                        <p class="text-stone-800 font-semibold">{{ user.email }}</p>
                    </div>
                </div>

                {# Teléfono #}
                <div class="flex items-start gap-4">
                    <div class="p-3 bg-stone-50 rounded-xl text-[#8B5E3C]">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-stone-400 uppercase tracking-wider">Teléfono</p>
                        <p class="text-stone-800 font-semibold">{{ user.telefono|default('No registrado') }}</p>
                    </div>
                </div>

                {# NIF #}
                <div class="flex items-start gap-4">
                    <div class="p-3 bg-stone-50 rounded-xl text-[#8B5E3C]">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-stone-400 uppercase tracking-wider">Documento (NIF)</p>
                        <p class="text-stone-800 font-semibold font-mono">{{ user.nif }}</p>
                    </div>
                </div>

                {# Estado Contrato #}
                <div class="flex items-start gap-4">
                    <div class="p-3 bg-stone-50 rounded-xl {{ user.contratoFirmado ? 'text-emerald-500' : 'text-red-400' }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-stone-400 uppercase tracking-wider">Contrato</p>
                        <p class="font-bold {{ user.contratoFirmado ? 'text-emerald-600' : 'text-red-500' }}">
                            {{ user.contratoFirmado ? 'Firmado' : 'Pendiente de firma' }}
                        </p>
                    </div>
                </div>
            </div>

            <hr class="border-stone-50 mb-8">

            {# Botones de Acción #}
            <div class="flex flex-col gap-4">
                <div class="flex gap-4">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="flex-grow text-center py-4 bg-stone-100 hover:bg-stone-200 text-stone-600 font-bold rounded-2xl transition-all">
                        Editar Información
                    </a>
                    <div class="shrink-0">
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
                
                <a href="{{ path('app_user_index') }}" class="text-center text-xs font-bold text-stone-400 uppercase tracking-widest hover:text-[#8B5E3C] transition-all mt-4">
                    ← Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{# RENDERIZADO POR ROLES #}
{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ block('user_show_content') }}
    {% endif %}
{% endblock %}

{% block client_body %}
    {% if not is_granted('ROLE_ADMIN') %}
        {{ block('user_show_content') }}
    {% endif %}
{% endblock %}
