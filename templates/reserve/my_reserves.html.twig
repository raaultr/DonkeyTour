            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
            Nueva Reserva
        </a>
    </div>

    {% if reserves|length > 0 %}
        <div class="space-y-5">
            {% for reserve in reserves %}
                {% set companionCount = reserve.companionCount %}

                <a href="{{ path('app_reserve_show', {'id': reserve.id}) }}"
                   class="block bg-white/80 backdrop-blur-xl border border-stone-100 rounded-3xl p-6 shadow-sm
