{% extends 'base.html.twig' %}

{% block title %}Reservar ‚Äî Seleccionar Burro ¬∑ DonkeyTour{% endblock %}

{% block client_body %}
<div class="max-w-6xl mx-auto px-6 py-16">

    {{ include('reserve/_wizard_progress.html.twig') }}

    {% for type, messages in app.flashes %}
        {% for msg in messages %}
            <div class="mb-6 px-5 py-3 rounded-2xl text-sm font-bold {{ type == 'error' ? 'bg-red-50 text-red-600 border border-red-100' : 'bg-green-50 text-green-600 border border-green-100' }}">
                {{ msg }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="text-center mb-12">
        <span class="text-[#8B5E3C] font-bold tracking-widest uppercase text-xs">Paso 3 de 5</span>
        <h1 class="text-3xl md:text-4xl font-bold text-[#3E2F28] mt-2">Elige tu compa√±ero de aventura</h1>
        <p class="text-stone-400 mt-2 max-w-lg mx-auto">Estos son los burros disponibles para la fecha seleccionada. ¬°Todos est√°n deseando conocerte!</p>
    </div>

    {% if donkeys|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for donkey in donkeys %}
                <form method="post" action="{{ path('app_reserve_step3_post') }}">
                    <input type="hidden" name="donkey_id" value="{{ donkey.id }}">
                    <button type="submit"
                            class="w-full text-left bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-xl hover:-translate-y-1
                                   transition-all duration-300 border border-stone-100 group cursor-pointer">

                        {# Foto #}
                        <div class="relative h-56 overflow-hidden bg-gradient-to-br from-[#8B5E3C]/5 to-[#4A90A4]/5">
                            {% if donkey.photoUrl %}
                                <img src="{{ donkey.photoUrl }}"
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                     alt="{{ donkey.nombre }}">
                            {% else %}
                                <div class="w-full h-full flex items-center justify-center">
                                    <span class="text-7xl opacity-50 group-hover:scale-110 transition-transform duration-300">üê¥</span>
                                </div>
                            {% endif %}
                            <div class="absolute top-4 right-4 bg-green-500/90 backdrop-blur-sm text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase tracking-wider">
                                Disponible
                            </div>
                        </div>

                        {# Info #}
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-[#3E2F28] mb-3 group-hover:text-[#8B5E3C] transition-colors">
                                {{ donkey.nombre }}
                            </h3>

                            <div class="grid grid-cols-2 gap-2 text-xs text-stone-500">
                                <div class="flex items-center gap-1.5">
                                    <span class="text-base">üìÖ</span>
                                    <span><strong class="text-stone-700">{{ donkey.years ?? '‚Äî' }}</strong> a√±os</span>
                                </div>
                                <div class="flex items-center gap-1.5">
                                    <span class="text-base">üè∑Ô∏è</span>
                                    <span>{{ donkey.race }}</span>
                                </div>
                                <div class="flex items-center gap-1.5">
                                    <span class="text-base">‚öñÔ∏è</span>
                                    <span><strong class="text-stone-700">{{ donkey.kilogram }}</strong> kg</span>
                                </div>
                                <div class="flex items-center gap-1.5">
                                    <span class="text-base">üéí</span>
                                    <span>M√°x. <strong class="text-stone-700">{{ donkey.maxWeightr }}</strong> kg</span>
                                </div>
                            </div>

                            <div class="mt-5 flex items-center justify-center gap-2 py-3 border-t border-stone-100
                                        text-[#8B5E3C] font-bold text-xs uppercase tracking-widest group-hover:text-[#764F32]">
                                Elegir a {{ donkey.nombre }}
                                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
                            </div>
                        </div>
                    </button>
                </form>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-20 bg-white/80 rounded-3xl border border-stone-100 shadow-sm">
            <div class="text-6xl mb-4">üò¢</div>
            <p class="text-stone-500 font-bold text-lg mb-2">No hay burros disponibles para esa fecha</p>
            <p class="text-stone-400 text-sm mb-8">Prueba a elegir otra fecha y hora.</p>
            <a href="{{ path('app_reserve_step2') }}"
               class="inline-block px-8 py-3 bg-[#8B5E3C] hover:bg-[#764f32] text-white font-bold rounded-2xl transition-all shadow-lg shadow-[#8B5E3C]/20">
                Cambiar fecha
            </a>
        </div>
    {% endif %}

    <div class="mt-8 text-center">
        <a href="{{ path('app_reserve_step2') }}" class="text-stone-500 font-bold hover:text-[#3E2F28] transition-colors text-sm flex items-center justify-center gap-1">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
            Volver a fecha y hora
        </a>
    </div>
</div>
{% endblock %}
