{% extends 'base.html.twig' %}

{% block title %}Reserva #{{ reserve.id }} Â· DonkeyTour{% endblock %}

{% block client_body %}
<div class="max-w-3xl mx-auto px-6 py-16">

    <div class="mb-8">
        <a href="{{ path('app_reserve_my') }}" class="text-stone-500 font-bold hover:text-[#3E2F28] transition-colors text-sm flex items-center gap-1 mb-4">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
            Volver a mis reservas
        </a>
        <div class="flex items-center gap-4">
            <h1 class="text-3xl font-bold text-[#3E2F28]">Reserva #{{ reserve.id }}</h1>
            <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider
                         {{ reserve.state ? 'bg-green-50 text-green-600 border border-green-100' : 'bg-red-50 text-red-500 border border-red-100' }}">
                {{ reserve.state ? 'Activa' : 'Cancelada' }}
            </span>
        </div>
    </div>

    <div class="bg-white/80 backdrop-blur-xl border border-stone-100 rounded-[2.5rem] p-8 md:p-10 shadow-[0_20px_50px_rgba(139,94,60,0.05)] space-y-7">

        {# Servicio #}
        <div class="flex items-center gap-4 bg-stone-50 rounded-2xl p-5 border border-stone-100">
            <div class="w-12 h-12 rounded-xl bg-[#8B5E3C]/10 text-[#8B5E3C] flex items-center justify-center text-xl shrink-0">ğŸ¯</div>
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Servicio</p>
                <p class="font-bold text-[#3E2F28] text-lg">{{ reserve.service.type|capitalize }}</p>
                <p class="text-xs text-stone-400">{{ reserve.service.basePrice }}â‚¬ / persona Â· {{ reserve.service.duration ? reserve.service.duration|date('H:i') : 'â€”' }}h</p>
            </div>
