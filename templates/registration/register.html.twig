{% extends 'base.html.twig' %}

{% block title %}Crear Cuenta — DonkeyTour{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#fcfaf7] flex items-center justify-center p-4 relative overflow-hidden">
    <div class="absolute -top-24 -left-24 w-96 h-96 bg-amber-100 rounded-full blur-3xl opacity-50"></div>
    <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-[#4A90A4] rounded-full blur-3xl opacity-10"></div>

    <div class="w-full max-w-2xl z-10 my-8">
        <div class="flex flex-col items-center mb-6 animate-fade-in-down">
            <div class="relative group">
                <div class="absolute -inset-4 bg-gradient-to-tr from-amber-200 to-transparent rounded-full blur-2xl opacity-40 group-hover:opacity-60 transition duration-1000"></div>
                <img src="{{ asset('img/logoDonkey_sinFondo.png') }}" 
                     alt="DonkeyTour" 
                     class="relative w-32 h-32 md:w-40 md:h-40 object-contain drop-shadow-md transform transition-transform hover:scale-105 duration-500">
            </div>
            <h1 class="text-3xl font-serif font-extrabold text-[#3E2F28] tracking-tight mt-4">Únete a la expedición</h1>
            <p class="text-stone-500 text-sm font-medium">Crea tu cuenta en DonkeyTour</p>
        </div>

        <div class="bg-white/80 backdrop-blur-xl rounded-[2.5rem] shadow-[0_20px_50px_rgba(139,94,60,0.15)] p-8 md:p-12 border border-white">
            
            {# Errores de Symfony Flashes #}
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="mb-6 flex items-center gap-3 p-4 bg-red-50 border border-red-100 rounded-2xl text-red-600 text-sm shadow-sm animate-bounce">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-medium">{{ flashError }}</span>
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {# Nombre Completo #}
                    <div class="space-y-2">
                        <label class="block text-[11px] font-bold uppercase tracking-widest text-stone-400 ml-4">Nombre Completo</label>
                        {{ form_widget(registrationForm.nombre, { 'attr': {'class': 'w-full px-5 py-4 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-2xl transition-all duration-300 outline-none text-stone-700 placeholder-stone-400', 'placeholder': 'Ej: Juan Pérez'} }) }}
                        <div class="text-red-500 text-xs mt-1 ml-4 italic">{{ form_errors(registrationForm.nombre) }}</div>
                    </div>

                    {# Email #}
                    <div class="space-y-2">
                        <label class="block text-[11px] font-bold uppercase tracking-widest text-stone-400 ml-4">Email</label>
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'w-full px-5 py-4 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-2xl transition-all duration-300 outline-none text-stone-700 placeholder-stone-400', 'placeholder': 'tu@email.com'} }) }}
                        <div class="text-red-500 text-xs mt-1 ml-4 italic">{{ form_errors(registrationForm.email) }}</div>
                    </div>

                    {# NIF #}
                    <div class="space-y-2">
                        <label class="block text-[11px] font-bold uppercase tracking-widest text-stone-400 ml-4">NIF / DNI</label>
                        {{ form_widget(registrationForm.nif, { 'attr': {'class': 'w-full px-5 py-4 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-2xl transition-all duration-300 outline-none text-stone-700 placeholder-stone-400', 'placeholder': '12345678X'} }) }}
                        <div class="text-red-500 text-xs mt-1 ml-4 italic">{{ form_errors(registrationForm.nif) }}</div>
                    </div>

                    {# Teléfono #}
                    <div class="space-y-2">
                        <label class="block text-[11px] font-bold uppercase tracking-widest text-stone-400 ml-4">Teléfono</label>
                        {{ form_widget(registrationForm.telefono, { 'attr': {'class': 'w-full px-5 py-4 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-2xl transition-all duration-300 outline-none text-stone-700 placeholder-stone-400', 'placeholder': '600 000 000'} }) }}
                        <div class="text-red-500 text-xs mt-1 ml-4 italic">{{ form_errors(registrationForm.telefono) }}</div>
                    </div>
                </div>

                {# Contraseña #}
                <div class="space-y-2">
                    <label class="block text-[11px] font-bold uppercase tracking-widest text-stone-400 ml-4">Contraseña</label>
                    {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'w-full px-5 py-4 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-2xl transition-all duration-300 outline-none text-stone-700 placeholder-stone-400', 'placeholder': 'Mínimo 6 caracteres'} }) }}
                    <div class="text-red-500 text-xs mt-1 ml-4 italic">{{ form_errors(registrationForm.plainPassword) }}</div>
                </div>

                {# Checkbox Términos #}
                <div class="flex items-start gap-3 px-4 py-2">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'w-5 h-5 text-[#4A90A4] bg-stone-100 border-stone-300 rounded focus:ring-[#4A90A4] cursor-pointer'} }) }}
                    </div>
                    <label class="text-xs text-stone-500 leading-tight cursor-pointer">
                        Acepto los <a href="#" class="text-[#4A90A4] font-bold underline underline-offset-2">términos de servicio</a> y la política de expediciones de DonkeyTour.
                    </label>
                    <div class="text-red-500 text-[10px] mt-1 italic">{{ form_errors(registrationForm.agreeTerms) }}</div>
                </div>

                <button type="submit" 
                        class="w-full group relative flex justify-center py-4 px-4 border border-transparent font-bold rounded-2xl text-white bg-[#8B5E3C] hover:bg-[#764f32] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#8B5E3C] transition-all duration-300 shadow-lg shadow-amber-900/30 overflow-hidden">
                    <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-white/0 via-white/10 to-white/0 transform -translate-x-full group-hover:animate-[shimmer_1.5s_infinite]"></span>
                    Crear mi cuenta
                </button>

            {{ form_end(registrationForm) }}

            <div class="mt-8 pt-6 border-t border-stone-100 text-center">
                <p class="text-stone-500 text-sm font-medium">
                    ¿Ya eres un aventurero? 
                    <a href="{{ path('app_login') }}" class="text-[#4A90A4] font-bold hover:text-[#3a7282] transition-colors decoration-2 underline-offset-4">
                        Inicia sesión aquí
                    </a>
                </p>
            </div>
        </div>
        
        <p class="mt-8 text-center text-stone-400 text-[10px] uppercase tracking-[0.2em]">
            &copy; {{ "now"|date("Y") }} DonkeyTour - Granada, España
        </p>
    </div>
</div>

<style>
    @keyframes shimmer {
        100% { transform: translateX(100%); }
    }
    .animate-fade-in-down {
        animation: fadeInDown 0.8s ease-out;
    }
    @keyframes fadeInDown {
        0% { opacity: 0; transform: translateY(-20px); }
        100% { opacity: 1; transform: translateY(0); }
    }
</style>
{% endblock %}