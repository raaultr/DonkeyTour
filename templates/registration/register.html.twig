{% extends 'base.html.twig' %}

{% block title %}Crear Cuenta — DonkeyTour{% endblock %}

{% block body %}
<div class="h-screen w-full bg-[#fcfaf7] flex items-center justify-center p-4 relative overflow-hidden">
    <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-[#4A90A4] rounded-full blur-3xl opacity-10"></div>

    <div class="w-full max-w-2xl z-10 flex flex-col items-center transform scale-[0.85] md:scale-90 lg:scale-100 transition-transform duration-500">
        
        <div class="flex flex-col items-center mb-4 animate-fade-in-down">
            <div class="relative group">
                <div class="absolute -inset-4 bg-gradient-to-tr from-amber-200 to-transparent rounded-full blur-2xl opacity-40"></div>
                <img src="{{ asset('img/logoDonkey_sinFondo.png') }}" 
                     alt="DonkeyTour" 
                     class="relative w-28 h-28 md:w-36 md:h-36 object-contain drop-shadow-md">
            </div>
            <h1 class="text-2xl font-serif font-extrabold text-[#3E2F28] tracking-tight mt-2">Únete a la expedición</h1>
        </div>

        <div class="w-full bg-white/80 backdrop-blur-xl rounded-[2.5rem] shadow-[0_20px_50px_rgba(139,94,60,0.15)] p-6 md:p-10 border border-white">
            
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4', 'novalidate': 'novalidate'}}) }}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {# Nombre #}
                    <div class="space-y-1">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-4">Nombre Completo</label>
                        {{ form_widget(registrationForm.nombre, { 'attr': {'class': 'w-full px-4 py-3 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-xl transition-all outline-none text-stone-700 text-sm'} }) }}
                    </div>

                    {# Email #}
                    <div class="space-y-1">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-4">Email</label>
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'w-full px-4 py-3 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-xl transition-all outline-none text-stone-700 text-sm'} }) }}
                    </div>

                    {# NIF #}
                    <div class="space-y-1">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-4">NIF / DNI</label>
                        {{ form_widget(registrationForm.nif, { 'attr': {'class': 'w-full px-4 py-3 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-xl transition-all outline-none text-stone-700 text-sm'} }) }}
                    </div>

                    {# Teléfono #}
                    <div class="space-y-1">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-4">Teléfono</label>
                        {{ form_widget(registrationForm.telefono, { 'attr': {'class': 'w-full px-4 py-3 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-xl transition-all outline-none text-stone-700 text-sm'} }) }}
                    </div>
                </div>

                {# Contraseña #}
                <div class="space-y-1">
                    <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-4">Contraseña</label>
                    {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'w-full px-4 py-3 bg-stone-100/50 border-transparent focus:border-[#4A90A4] focus:bg-white focus:ring-4 focus:ring-[#4A90A4]/10 rounded-xl transition-all outline-none text-stone-700 text-sm'} }) }}
                </div>

                {# Términos #}
                <div class="flex items-center gap-3 px-4 py-1">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'w-4 h-4 text-[#4A90A4] border-stone-300 rounded focus:ring-[#4A90A4]'} }) }}
                    <label class="text-[11px] text-stone-500">Acepto los términos de servicio.</label>
                </div>

                <button type="submit" 
                        class="w-full py-3 px-4 font-bold rounded-xl text-white bg-[#8B5E3C] hover:bg-[#764f32] transition-all shadow-lg shadow-amber-900/20">
                    Crear mi cuenta
                </button>

            {{ form_end(registrationForm) }}

            <div class="mt-4 pt-4 border-t border-stone-100 text-center">
                <p class="text-stone-500 text-xs">
                    ¿Ya eres un aventurero? 
                    <a href="{{ path('app_login') }}" class="text-[#4A90A4] font-bold hover:underline ml-1">Inicia sesión</a>
                </p>
            </div>
        </div>
        
        <p class="mt-4 text-stone-400 text-[9px] uppercase tracking-[0.2em]">
            &copy; DonkeyTour - Granada
        </p>
    </div>
</div>

<style>
    /* Forzar que el body no tenga scroll bajo ningún concepto */
    body, html {
        margin: 0;
        height: 100%;
        overflow: hidden !important;
    }
</style>
{% endblock %}
