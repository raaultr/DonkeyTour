{% extends 'base.html.twig' %}

{% block title %}Crear Cuenta ‚Äî DonkeyTour{% endblock %}

{% block body %}
<div class="auth-bg">
    <div class="auth-card auth-card-wide">
        {# Logo #}
        <div class="auth-logo">
            <span class="auth-logo-icon">ü´è</span>
            <div class="auth-logo-title">DonkeyTour</div>
            <div class="auth-logo-subtitle">Crea tu cuenta y empieza la aventura</div>
        </div>

        {# Errores globales del formulario #}
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="auth-error">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                <span>{{ flashError }}</span>
            </div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

        {# Nombre completo #}
        <div class="auth-field">
            {{ form_label(registrationForm.nombre) }}
            {{ form_widget(registrationForm.nombre) }}
            {{ form_errors(registrationForm.nombre) }}
        </div>

        {# Email #}
        <div class="auth-field">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        {# NIF y Tel√©fono en fila #}
        <div class="auth-row">
            <div class="auth-field">
                {{ form_label(registrationForm.nif) }}
                {{ form_widget(registrationForm.nif) }}
                {{ form_errors(registrationForm.nif) }}
            </div>
            <div class="auth-field">
                {{ form_label(registrationForm.telefono) }}
                {{ form_widget(registrationForm.telefono) }}
                {{ form_errors(registrationForm.telefono) }}
            </div>
        </div>

        {# Contrase√±a #}
        <div class="auth-field">
            {{ form_label(registrationForm.plainPassword) }}
            {{ form_widget(registrationForm.plainPassword) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        {# Aceptar t√©rminos #}
        <div class="auth-checkbox">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="auth-btn">
            Crear Cuenta
        </button>

        {{ form_end(registrationForm) }}

        <div class="auth-link">
            ¬øYa tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesi√≥n</a>
        </div>
    </div>
</div>
{% endblock %}
