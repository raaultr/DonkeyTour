<script>
    document.addEventListener('turbo:load', function () {
        //  Admin hamburger 
        const adminHamburger = document.getElementById('admin-hamburger');
        const adminSidebar = document.getElementById('admin-sidebar');
        const adminOverlay = document.getElementById('admin-overlay');
        const adminClose = document.getElementById('admin-sidebar-close');

        function openAdminSidebar() {
            if (adminSidebar) adminSidebar.classList.remove('-translate-x-full');
            if (adminOverlay) adminOverlay.classList.remove('hidden');
        }
        function closeAdminSidebar() {
            if (adminSidebar) adminSidebar.classList.add('-translate-x-full');
            if (adminOverlay) adminOverlay.classList.add('hidden');
        }

        if (adminHamburger) adminHamburger.addEventListener('click', openAdminSidebar);
        if (adminClose) adminClose.addEventListener('click', closeAdminSidebar);

        //  Client hamburger 
        const clientHamburger = document.getElementById('client-hamburger');
        const clientMenu = document.getElementById('client-mobile-menu');
        const iconOpen = document.getElementById('client-hamburger-open');
        const iconClose = document.getElementById('client-hamburger-close');
        let clientMenuOpen = false;

        function toggleClientMenu() {
            clientMenuOpen = !clientMenuOpen;
            if (clientMenuOpen) {
                clientMenu.classList.remove('translate-y-full');
                clientMenu.classList.add('translate-y-0');
                iconOpen.classList.add('hidden');
                iconClose.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            } else {
                clientMenu.classList.add('translate-y-full');
                clientMenu.classList.remove('translate-y-0');
                iconOpen.classList.remove('hidden');
                iconClose.classList.add('hidden');
                document.body.style.overflow = '';
            }
        }

        if (clientHamburger) clientHamburger.addEventListener('click', toggleClientMenu);
    });
</script>
