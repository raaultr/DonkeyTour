{% extends 'base.html.twig' %}

{% block title %}Nuestros Burros - DonkeyTour{% endblock %}

{# Definimos el contenido en un bloque independiente para no repetir c√≥digo #}
{% block donkey_content %}
<div class="bg-[#FCFAF7] min-h-screen p-8">
    <div class="max-w-7xl mx-auto">
        
        <div class="flex justify-between items-end mb-10">
            <div>
                <span class="text-[#4A90A4] font-bold tracking-widest uppercase text-xs">Cat√°logo</span>
                <h1 class="text-4xl font-serif font-extrabold text-[#3E2F28] mt-2">
                    {{ is_granted('ROLE_ADMIN') ? 'Gesti√≥n del Establo' : 'Nuestros Protagonistas' }}
                </h1>
            </div>
            
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_donkey_new') }}" class="bg-[#8B5E3C] hover:bg-[#764f32] text-white px-6 py-3 rounded-2xl font-bold text-sm transition-all shadow-lg shadow-amber-900/20">
                    + Registrar nuevo burro
                </a>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
            {% for donkey in donkeys %}
                <div class="bg-white rounded-[2.5rem] overflow-hidden border border-stone-100 shadow-sm hover:shadow-xl transition-all group {% if not donkey.disponible and not is_granted('ROLE_ADMIN') %}opacity-75{% endif %}">
                    
                    {# Imagen y Badge de Estado #}
                    <div class="h-56 bg-stone-200 relative overflow-hidden">
                        {% if donkey.photoUrl %}
                            <img src="{{ donkey.photoUrl }}" alt="{{ donkey.nombre }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        {% else %}
                            <div class="flex items-center justify-center h-full text-4xl italic text-stone-400">üê¥</div>
                        {% endif %}
                        
                        <div class="absolute top-4 right-4">
                            <span class="px-3 py-1 {% if donkey.disponible %}bg-emerald-500{% else %}bg-red-400{% endif %} text-white text-[10px] font-black uppercase tracking-widest rounded-full shadow-sm">
                                {{ donkey.disponible ? 'Disponible' : 'En ruta' }}
                            </span>
                        </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-xl font-bold text-[#3E2F28] mb-1">{{ donkey.nombre }}</h3>
                        <p class="text-stone-400 text-xs uppercase tracking-widest mb-4">{{ donkey.race }}</p>
                        
                        <div class="flex justify-between items-center pt-4 border-t border-stone-50">
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="flex gap-3 w-full justify-start">
                                    <a href="{{ path('app_donkey_show', {'id': donkey.id}) }}" class="p-2 text-stone-400 hover:text-[#4A90A4] hover:bg-[#4A90A4]/10 rounded-xl transition-all">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    <a href="{{ path('app_donkey_edit', {'id': donkey.id}) }}" class="p-2 text-stone-400 hover:text-[#8B5E3C] hover:bg-[#8B5E3C]/10 rounded-xl transition-all">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                </div>
                            {% else %}
                                {% if donkey.disponible %}
                                    <a href="{{ path('app_donkey_show', {'id': donkey.id}) }}" class="w-full text-center py-3 bg-[#4A90A4] hover:bg-[#3a7181] text-white rounded-xl text-xs font-extrabold transition-all shadow-md active:scale-95">
                                        Conocer y Adoptar
                                    </a>
                                {% else %}
                                    <button disabled class="w-full text-center py-3 bg-stone-100 text-stone-400 rounded-xl text-xs font-bold cursor-not-allowed uppercase tracking-tighter">
                                        No disponible temporalmente
                                    </button>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-20">
                    <p class="text-stone-400 italic">No hay burros registrados en el establo.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{# Renderizamos el contenido en el bloque que corresponda seg√∫n el rol #}
{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ block('donkey_content') }}
    {% endif %}
{% endblock %}

{% block client_body %}
    {% if not is_granted('ROLE_ADMIN') %}
        {{ block('donkey_content') }}
    {% endif %}
{% endblock %}