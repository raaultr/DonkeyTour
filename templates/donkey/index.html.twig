{% extends 'base.html.twig' %}

{% block title %}Nuestros Burros - DonkeyTour{% endblock %}

{% block client_body %}
<div class="bg-[#FCFAF7] min-h-screen pt-12">

    {# --- CABECERA SENCILLA (Sustituye a la Hero) --- #}
    <div class="max-w-7xl mx-auto px-6 mb-12">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 border-b border-stone-200 pb-8">
            <div>
                <span class="text-[#764F32] text-[10px] font-black uppercase tracking-[0.3em] mb-2 block">DonkeyTour Family</span>
                <h1 class="text-4xl md:text-5xl font-bold text-stone-900 tracking-tighter">Nuestros Burros</h1>
                <p class="text-stone-500 mt-2 font-medium">Conoce a los verdaderos protagonistas de nuestras rutas por Granada.</p>
            </div>

            {# --- BOTÓN GESTIÓN (Solo Admin) --- #}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_donkey_new') }}" class="px-6 py-3 bg-[#764F32] text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-stone-800 transition-all shadow-md">
                    + Registrar nuevo burro
                </a>
            {% endif %}
        </div>

    {# --- GRID DE BURROS --- #}
    <section class="max-w-7xl mx-auto px-6 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
            {% for donkey in donkeys %}
                <div class="group bg-white rounded-[2.5rem] overflow-hidden border border-stone-100 shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col relative">
                    
                    {# Imagen #}
                    <div class="relative h-80 overflow-hidden bg-stone-200">
                        <img src="{{ donkey.photoUrl ? donkey.photoUrl : asset('img/burroBanner.png') }}" 
                             class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" 
                             alt="{{ donkey.nombre }}">
                        
                        <div class="absolute top-6 left-6">
                            {% if donkey.disponible %}
                                <span class="bg-emerald-500 text-white px-4 py-1.5 rounded-full text-[9px] font-black uppercase tracking-widest shadow-sm">
                                    Disponible
                                </span>
                            {% else %}
                                <span class="bg-amber-500 text-white px-4 py-1.5 rounded-full text-[9px] font-black uppercase tracking-widest shadow-sm">
                                    En descanso
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-xl font-bold text-[#3E2F28] mb-1">{{ donkey.nombre }}</h3>
                        <p class="text-stone-400 text-xs uppercase tracking-widest mb-4">{{ donkey.race }}</p>
                        
                        {# Info Técnica #}
                        <div class="grid grid-cols-3 gap-4 py-6 border-y border-stone-50 mb-8">
                            <div class="text-center">
                                <span class="block text-stone-300 text-[9px] font-black uppercase mb-1">Edad</span>
                                <span class="text-stone-800 font-bold text-sm">{{ donkey.years }}a</span>
                            </div>
                            <div class="text-center border-x border-stone-50">
                                <span class="block text-stone-300 text-[9px] font-black uppercase mb-1">Peso</span>
                                <span class="text-stone-800 font-bold text-sm">{{ donkey.kilogram }}kg</span>
                            </div>
                            <div class="text-center">
                                <span class="block text-stone-300 text-[9px] font-black uppercase mb-1">Carga</span>
                                <span class="text-stone-800 font-bold text-sm">{{ donkey.maxWeightr }}kg</span>
                            </div>
                        </div>

                        {# Acciones Symfony #}
                        <div class="mt-auto space-y-3">
                            <div class="flex gap-2">
                                <a href="{{ path('app_donkey_show', {'id': donkey.id}) }}" class="flex-1 py-4 bg-stone-100 text-stone-800 font-black text-[10px] uppercase tracking-widest hover:bg-stone-200 transition-all rounded-xl text-center">
                                    Ver Perfil
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_donkey_edit', {'id': donkey.id}) }}" class="px-5 py-4 border border-stone-100 text-stone-300 hover:text-[#764F32] transition-all rounded-xl">
                                        ⚙️
                                    </a>
                                {% endif %}
                            </div>

                            {% if app.user %}
                                <a href="{{ path('app_donkey_show', {'id': donkey.id}) }}#apadrinar" class="block w-full py-4 bg-[#764F32] text-white font-black text-[10px] uppercase tracking-widest rounded-xl hover:bg-stone-800 transition-all shadow-md text-center">
                                    ✨ Apadrinar a {{ donkey.nombre }}
                                </a>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="block w-full py-4 border-2 border-dashed border-stone-200 text-stone-400 font-black text-[10px] uppercase tracking-widest rounded-xl hover:border-[#764F32] hover:text-[#764F32] transition-all text-center">
                                    Inicia sesión para colaborar
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-20 bg-white rounded-3xl border border-dashed border-stone-200">
                    <p class="text-stone-400 italic">No hay burros registrados en este momento.</p>
                </div>
            {% endfor %}
        </div>
    </section>

    {# --- SECCIÓN INFORMATIVA INFERIOR --- #}
    <div class="bg-stone-900 py-16 text-white text-center mt-12">
        <div class="max-w-4xl mx-auto px-6">
            <h2 class="text-2xl font-bold mb-4 italic text-[#95d5b2]">Compromiso con el Bienestar</h2>
            <p class="text-stone-400 leading-relaxed text-sm">
                Cada apadrinamiento nos permite asegurar que nuestros burros tengan la mejor vida posible en Granada.
            </p>
        </div>
    </div>
</div>
{% endblock %}