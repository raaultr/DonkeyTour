{% extends 'base.html.twig' %}

{% block title %}Registro Rápido - DonkeyTour{% endblock %}

{% block body %}
<div class="bg-[#FCFAF7] p-4"> {# Eliminado min-h-screen para evitar scroll innecesario #}
    
    <div class="w-full max-w-7xl mx-auto">
        
        {# --- CABECERA MÁS COMPACTA --- #}
        <div class="flex items-center justify-between mb-4 px-4">
            <div>
                <h1 class="text-3xl font-extrabold text-[#3E2F28] tracking-tight font-serif">Alta de Protagonista</h1>
                <p class="text-stone-400 text-[10px] font-bold uppercase tracking-widest">Gestión de inventario animal</p>
            </div>
            <a href="{{ path('app_donkey_index') }}" class="px-5 py-2 border border-stone-200 text-stone-500 text-[10px] font-bold uppercase tracking-widest rounded-xl hover:bg-stone-100 transition-all">
                ← Volver al listado
            </a>
        </div>

        {# --- FORMULARIO OPTIMIZADO --- #}
        <div class="bg-white/80 backdrop-blur-xl rounded-[2.5rem] shadow-[0_10px_40px_rgba(139,94,60,0.05)] border border-stone-100 p-6 md:p-10">
            
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }} {# Espaciado reducido de 10 a 6 #}
                
                {# Primera Fila #}
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Nombre del Burro</label>
                        {{ form_widget(form.nombre, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all',
                            'placeholder': 'Ej: Platero'
                        }}) }}
                    </div>
                    
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Raza / Linaje</label>
                        {{ form_widget(form.race, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all',
                            'placeholder': 'Ej: Andaluz'
                        }}) }}
                    </div>

                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Enlace de la Foto (URL)</label>
                        {{ form_widget(form.photoUrl, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all',
                            'placeholder': 'https://...'
                        }}) }}
                    </div>
                </div>

                {# Segunda Fila #}
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 items-end">
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Edad (años)</label>
                        {{ form_widget(form.years, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-100 bg-stone-50/50 text-stone-800 font-bold focus:border-[#8B5E3C] focus:bg-white outline-none transition-all'
                        }}) }}
                    </div>
                    
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Peso (kg)</label>
                        {{ form_widget(form.kilogram, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-100 bg-stone-50/50 text-stone-800 font-bold focus:border-[#8B5E3C] focus:bg-white outline-none transition-all'
                        }}) }}
                    </div>

                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Carga Máx (kg)</label>
                        {{ form_widget(form.maxWeightr, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-100 bg-stone-50/50 text-stone-800 font-bold focus:border-[#8B5E3C] focus:bg-white outline-none transition-all'
                        }}) }}
                    </div>

                    <div class="flex items-center justify-between px-5 py-3 bg-[#EBF4F6] rounded-xl border border-[#4A90A4]/10 h-[50px] group transition-colors">
                        <span class="text-[9px] font-bold uppercase tracking-widest text-[#4A90A4]">¿Disponible?</span>
                        {{ form_widget(form.disponible, {'attr': {
                            'class': 'w-5 h-5 text-[#4A90A4] border-none rounded focus:ring-0 cursor-pointer accent-[#4A90A4]'
                        }}) }}
                    </div>
                </div>

                {# BOTÓN MARRÓN MÁS PEQUEÑO Y ESTILIZADO #}
                <div class="pt-2 flex justify-center">
                    <button class="w-full max-w-md py-4 bg-[#8B5E3C] hover:bg-[#764f32] text-white font-bold text-[11px] uppercase tracking-[0.3em] rounded-2xl transition-all duration-300 shadow-md shadow-amber-900/20 transform hover:-translate-y-0.5 active:scale-95">
                        Registrar en el Establo Virtual
                    </button>
                </div>

            {{ form_end(form) }}

        </div>

        <p class="text-center mt-4 text-stone-300 text-[9px] font-bold uppercase tracking-[0.2em]">
            DonkeyTour CRM — Granada, España
        </p>
    </div>
</div>
{% endblock %}