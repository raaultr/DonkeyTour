{% extends 'base.html.twig' %}

{% block title %}Detalle Servicio #{{ service.getId() }} ¬∑ DonkeyTour Admin{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">

    {# --- CABECERA MINIMALISTA --- #}
    <div class="bg-white rounded-[2.5rem] p-8 md:p-10 shadow-sm border border-stone-100 flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex items-center gap-6">
            <div class="w-16 h-16 bg-[#FCFAF7] border border-[#8B5E3C]/10 rounded-2xl flex items-center justify-center text-3xl">
                {{ service.type == 'Tour' ? 'üó∫Ô∏è' : '‚ú®' }}
            </div>
            <div>
                <p class="text-[10px] font-black uppercase tracking-[0.2em] text-[#4A90A4] mb-1">Administraci√≥n de Cat√°logo</p>
                <h1 class="text-3xl font-black text-[#3E2F28] tracking-tight">
                    {{ service.type }} <span class="text-stone-200">/</span> <span class="text-[#8B5E3C]">#{{ service.getId() }}</span>
                </h1>
            </div>
        </div>
        
        <div class="flex gap-3">
            <a href="{{ path('app_admin_service_edit', {'id': service.getId()}) }}" class="bg-[#8B5E3C] hover:bg-[#3E2F28] text-white px-8 py-3.5 rounded-2xl font-bold text-sm transition-all shadow-lg shadow-amber-900/10">
                Editar Registro
            </a>
            <a href="{{ path('app_admin_service_index') }}" class="px-8 py-3.5 bg-stone-50 text-stone-500 text-sm font-bold rounded-2xl hover:bg-stone-100 transition-all">
                Volver
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        {# --- COLUMNA PRINCIPAL (BLANCA) --- #}
        <div class="lg:col-span-8 space-y-8">
            <div class="bg-white rounded-[2.5rem] p-10 shadow-sm border border-stone-100">
                <h3 class="text-[10px] font-black uppercase tracking-[0.2em] text-[#4A90A4] mb-8 border-b border-stone-50 pb-4">Descripci√≥n General</h3>
                <p class="text-xl text-stone-600 leading-relaxed font-medium italic mb-10">
                    "{{ service.description }}"
                </p>

                {# Datos r√°pidos en grid #}
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                    <div class="space-y-1">
                        <p class="text-[9px] font-bold text-stone-400 uppercase tracking-widest">Precio</p>
                        <p class="text-2xl font-black text-[#8B5E3C]">{{ service.basePrice }}‚Ç¨</p>
                    </div>
                    <div class="space-y-1">
                        <p class="text-[9px] font-bold text-stone-400 uppercase tracking-widest">Capacidad</p>
                        <p class="text-2xl font-black text-[#3E2F28]">{{ service.maxAphor }} pax</p>
                    </div>
                    <div class="space-y-1">
                        <p class="text-[9px] font-bold text-stone-400 uppercase tracking-widest">Tiempo</p>
                        <p class="text-2xl font-black text-[#3E2F28]">{{ service.duration ? service.duration|date('H:i') : '02:00' }}h</p>
                    </div>
                    <div class="space-y-1">
                        <p class="text-[9px] font-bold text-stone-400 uppercase tracking-widest">Idioma</p>
                        <p class="text-2xl font-black text-[#3E2F28]">{{ service.leenguage|upper }}</p>
                    </div>
                </div>
            </div>

            {# Campos de la clase HIJA (Tour) #}
            {% if service.type == 'Tour' or service.type == 'Tour Guiado' %}
                <div class="bg-white rounded-[2.5rem] p-10 shadow-sm border border-stone-100 border-t-4 border-t-[#4A90A4]">
                    <h3 class="text-[10px] font-black uppercase tracking-[0.2em] text-[#4A90A4] mb-8">Detalles de la Ruta</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                        <div>
                            <p class="text-[10px] font-bold text-stone-400 uppercase mb-1">Nombre Comercial</p>
                            <p class="text-lg font-bold text-[#3E2F28]">{{ service.name|default('‚Äî') }}</p>
                        </div>
                        <div>
                            <p class="text-[10px] font-bold text-stone-400 uppercase mb-1">Paradas</p>
                            <p class="text-lg font-bold text-[#3E2F28]">{{ service.stops|default('0') }}</p>
                        </div>
                    </div>
                    <div class="bg-[#FCFAF7] p-8 rounded-3xl border border-stone-100">
                        <p class="text-[10px] font-bold text-[#8B5E3C] uppercase mb-4 tracking-widest">Itinerario Programado</p>
                        <p class="text-stone-600 leading-loose text-sm italic">{{ service.itinerary|default('No definido')|nl2br }}</p>
                    </div>
                </div>
            {% endif %}
        </div>

        {# --- COLUMNA LATERAL (LOG√çSTICA) --- #}
        <div class="lg:col-span-4 space-y-8">
            <div class="bg-white rounded-[2.5rem] p-10 shadow-sm border border-stone-100">
                <h3 class="text-[10px] font-black uppercase tracking-[0.2em] text-[#8B5E3C] mb-8 text-center">Asignaci√≥n Log√≠stica</h3>
                
                <div class="text-center space-y-6">
                    <div class="p-6 bg-[#FCFAF7] rounded-[2rem] border border-stone-100">
                        <p class="text-[9px] font-black text-stone-400 uppercase tracking-widest mb-3">Burro de Servicio</p>
                        {% if service.donkey %}
                            <p class="text-3xl mb-1">üê¥</p>
                            <p class="text-xl font-black text-[#3E2F28]">{{ service.donkey.nombre }}</p>
                        {% else %}
                            <p class="text-stone-300 italic text-sm">Pendiente de asignar</p>
                        {% endif %}
                    </div>

                    <div class="pt-6 border-t border-stone-50">
                        <p class="text-[9px] font-black text-stone-400 uppercase tracking-widest mb-4">Estado de Reservas</p>
                        <div class="flex justify-around items-center">
                            <div class="text-center">
                                <p class="text-3xl font-black text-[#3E2F28]">{{ service.reserves|length }}</p>
                                <p class="text-[9px] font-bold text-stone-400 uppercase">Total</p>
                            </div>
                            <div class="w-px h-10 bg-stone-100"></div>
                            <div class="text-center">
                                <span class="w-3 h-3 rounded-full bg-emerald-500 inline-block mb-1 shadow-[0_0_10px_rgba(16,185,129,0.4)]"></span>
                                <p class="text-[9px] font-bold text-stone-400 uppercase">Activo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center opacity-40">
                <p class="text-[9px] font-bold text-stone-400 uppercase tracking-[0.3em]">DonkeyTour System v2.6</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}