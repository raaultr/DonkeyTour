{% extends 'base.html.twig' %}

{% block title %}Editar {{ type_label }} · DonkeyTour Admin{% endblock %}
{% block page_title %}Editar {{ type_label }}{% endblock %}

{% block body %}
<div class="bg-[#FCFAF7] pt-4 px-8 pb-12">
    <div class="w-full max-w-5xl mx-auto">

        {# Cabecera #}
        <div class="flex items-center justify-between mb-10">
            <div class="flex flex-col gap-1">
                <h1 class="text-4xl font-extrabold text-[#3E2F28] tracking-tight">
                    Editar <span class="text-[#8B5E3C]">{{ type_label }}</span> #{{ service.id }}
                </h1>
            </div>
            <a href="{{ path('app_admin_service_index') }}" class="group flex items-center gap-2 px-5 py-2.5 bg-white border border-stone-200 text-stone-500 text-[11px] font-bold uppercase tracking-widest rounded-2xl hover:border-stone-400 hover:text-stone-800 transition-all shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                Volver
            </a>
        </div>

        {# Formulario #}
        <div class="bg-white rounded-[2.5rem] border border-stone-100 shadow-xl shadow-stone-200/50 p-10 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-[#4A90A4] opacity-[0.03] rounded-bl-full pointer-events-none"></div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                {# ── Campos comunes ── #}
                <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-2">Información General</p>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Precio base (€)</label>
                        {{ form_widget(form.basePrice, {'attr': {
                            'class': 'w-full h-12 px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all'
                        }}) }}
                    </div>
                    
                    {# Duración corregida con Puro Tailwind para alinear selectores #}
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Duración</label>
                        <div class="h-12 flex gap-2 [&_select]:flex-1 [&_select]:h-full [&_select]:rounded-xl [&_select]:border [&_select]:border-stone-200 [&_select]:bg-stone-50/50 [&_select]:px-3 [&_select]:font-bold [&_select]:text-stone-800 [&_select]:outline-none focus-within:[&_select]:border-[#8B5E3C] focus-within:[&_select]:bg-white transition-all">
                            {{ form_widget(form.duration) }}
                        </div>
                    </div>

                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Aforo máximo</label>
                        {{ form_widget(form.maxAphor, {'attr': {
                            'class': 'w-full h-12 px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all'
                        }}) }}
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Idioma</label>
                        {{ form_widget(form.leenguage, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'
                        }}) }}
                    </div>
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Burro asignado</label>
                        {{ form_widget(form.donkey, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'
                        }}) }}
                    </div>
                </div>

                <div class="flex flex-col gap-2">
                    <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Descripción</label>
                    {{ form_widget(form.description, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                        'rows': 3
                    }}) }}
                </div>

                {# ── Campos específicos corregidos (Sin instanceof) ── #}
                <div class="border-t border-stone-100 pt-6 mt-2">
                    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-4">
                        Campos específicos: {{ type_label }}
                    </p>

                    {% if service.type in ['Tour', 'Tour Guiado'] %}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Nombre del tour</label>
                                {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'}}) }}
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Paradas</label>
                                {{ form_widget(form.stops, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'}}) }}
                            </div>
                        </div>
                        <div class="flex flex-col gap-2 mb-6">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Itinerario</label>
                            {{ form_widget(form.itinerary, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all', 'rows': 3}}) }}
                        </div>
                        <div class="flex flex-col gap-2 mb-6">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles</label>
                            {{ form_widget(form.details, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all', 'rows': 2}}) }}
                        </div>
                        <div class="flex items-center justify-between px-5 py-3 bg-[#EBF4F6] rounded-xl border border-[#4A90A4]/10">
                            <span class="text-[9px] font-bold uppercase tracking-widest text-[#4A90A4]">¿Incluye audio-guía?</span>
                            {{ form_widget(form.audioExplanation, {'attr': {'class': 'w-5 h-5 accent-[#4A90A4]'}}) }}
                        </div>

                    {% elseif service.type == 'Despedida' %}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Temática</label>
                                {{ form_widget(form.tematica, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'}}) }}
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Lugar</label>
                                {{ form_widget(form.place, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'}}) }}
                            </div>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles</label>
                            {{ form_widget(form.details, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all', 'rows': 2}}) }}
                        </div>

                    {% elseif service.type == 'Therapy' %}
                        <div class="flex flex-col gap-2 mb-6">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Lugar de la sesión</label>
                            {{ form_widget(form.place, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'}}) }}
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles</label>
                            {{ form_widget(form.details, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all', 'rows': 2}}) }}
                        </div>

                    {% elseif service.type == 'Sponsorship' %}
                        <div class="flex flex-col gap-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles del apadrinamiento</label>
                            {{ form_widget(form.details, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all', 'rows': 3}}) }}
                        </div>
                    {% endif %}
                </div>

                {# Botón #}
                <div class="pt-2 flex justify-center">
                    <button class="w-full max-w-md py-4 bg-[#8B5E3C] hover:bg-[#764f32] text-white font-bold text-[11px] uppercase tracking-[0.3em] rounded-2xl transition-all duration-300 shadow-md shadow-amber-900/20 transform hover:-translate-y-0.5 active:scale-95">
                        Guardar Cambios
                    </button>
                </div>

            {{ form_end(form) }}

            {# Zona peligrosa #}
            <div class="mt-12 pt-8 border-t border-stone-50 flex items-center justify-between">
                <div class="flex flex-col">
                    <span class="text-xs font-bold text-stone-400 uppercase tracking-wider">Zona de control</span>
                    <p class="text-[10px] text-stone-300">Esta acción no se puede deshacer</p>
                </div>
                <form method="post" action="{{ path('app_admin_service_delete', {'id': service.id}) }}" onsubmit="return confirm('¿Eliminar este servicio definitivamente?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                    <button type="submit" class="px-6 py-2.5 bg-red-50 text-red-500 border border-red-100 font-bold text-[10px] uppercase tracking-widest rounded-2xl hover:bg-red-500 hover:text-white hover:border-red-500 transition-all">
                        Eliminar servicio
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}