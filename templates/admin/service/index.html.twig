{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n de Servicios ¬∑ DonkeyTour Admin{% endblock %}
{% block page_title %}Gesti√≥n de Servicios{% endblock %}

{% block body %}
<div class="space-y-8">

    {# Flashes #}
    {% for type, messages in app.flashes %}
        {% for msg in messages %}
            <div class="px-5 py-3 rounded-2xl text-sm font-bold {{ type == 'error' ? 'bg-red-50 text-red-600 border border-red-100' : 'bg-green-50 text-green-600 border border-green-100' }}">
                {{ msg }}
            </div>
        {% endfor %}
    {% endfor %}

    {# Cabecera #}
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
        <div>
            <span class="text-[#4A90A4] font-bold tracking-widest uppercase text-xs">Cat√°logo</span>
            <h1 class="text-2xl md:text-3xl font-bold text-[#3E2F28] mt-1">Todos los Servicios</h1>
            <p class="text-stone-400 text-sm mt-1">{{ services|length }} servicio{{ services|length != 1 ? 's' : '' }} activo{{ services|length != 1 ? 's' : '' }}</p>
        </div>
        <a href="{{ path('app_admin_service_choose_type') }}" class="bg-[#8B5E3C] hover:bg-[#764f32] text-white px-6 py-3 rounded-2xl font-bold text-sm transition-all shadow-lg shadow-amber-900/20">
            + Crear nuevo servicio
        </a>
    </div>

    {# Tabla de servicios #}
    <div class="bg-white/80 backdrop-blur-xl border border-stone-100 rounded-3xl p-6 shadow-sm overflow-x-auto">
        <table class="w-full text-left border-collapse min-w-[800px]">
            <thead>
                <tr>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">ID</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Tipo</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Descripci√≥n</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Precio</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Duraci√≥n</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Aforo</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Burro</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4">Idioma</th>
                    <th class="text-stone-400 text-[10px] font-bold uppercase tracking-widest border-b border-stone-200 pb-4 px-4 text-right">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-stone-600 text-sm">
                {% for service in services %}
                    <tr class="hover:bg-stone-50/50 transition-colors border-b border-stone-100 last:border-0 group">
                        <td class="py-4 px-4 font-bold text-[#3E2F28]">#{{ service.id }}</td>
                        <td class="py-4 px-4">
                            {% set typeColor = {
                                'Tour Guiado': 'bg-blue-50 text-blue-600 border-blue-100',
                                'Tour': 'bg-blue-50 text-blue-600 border-blue-100',
                                'Despedida': 'bg-pink-50 text-pink-600 border-pink-100',
                                'Burroterapia': 'bg-emerald-50 text-emerald-600 border-emerald-100',
                                'Apadrinamiento': 'bg-amber-50 text-amber-600 border-amber-100',
                            } %}
                            <span class="px-2.5 py-1 rounded-lg text-xs font-bold uppercase border {{ typeColor[service.type] | default('bg-stone-50 text-stone-500 border-stone-100') }}">
                                {{ service.type }}
                            </span>
                        </td>
                        <td class="py-4 px-4 max-w-[200px]">
                            <p class="truncate">{{ service.description|length > 60 ? service.description|slice(0, 60) ~ '‚Ä¶' : service.description }}</p>
                        </td>
                        <td class="py-4 px-4 font-bold text-[#764F32]">{{ service.basePrice }}‚Ç¨</td>
                        <td class="py-4 px-4">{{ service.duration ? service.duration|date('H:i') : '‚Äî' }}h</td>
                        <td class="py-4 px-4">üë• {{ service.maxAphor }}</td>
                        <td class="py-4 px-4">
                            {% if service.donkey %}
                                <span class="flex items-center gap-1.5">üê¥ {{ service.donkey.nombre }}</span>
                            {% else %}
                                <span class="text-stone-300">‚Äî</span>
                            {% endif %}
                        </td>
                        <td class="py-4 px-4">
                            {% set langMap = {'es': 'üá™üá∏', 'en': 'üá¨üáß', 'fr': 'üá´üá∑', 'de': 'üá©üá™'} %}
                            {{ langMap[service.leenguage] | default(service.leenguage) }}
                        </td>
                        <td class="py-4 px-4 text-right">
                            <div class="flex items-center justify-end gap-3 opacity-60 group-hover:opacity-100 transition-opacity">
                                <a href="{{ path('app_admin_service_show', {'id': service.id}) }}" class="text-[#4A90A4] hover:text-cyan-700 transition-colors" title="Ver detalle">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                                </a>
                                <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="text-[#8B5E3C] hover:text-[#764f32] transition-colors" title="Editar">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                                </a>
                                <form method="post" action="{{ path('app_admin_service_delete', {'id': service.id}) }}" onsubmit="return confirm('¬øEst√°s seguro de eliminar este servicio?');" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                    <button type="submit" class="text-red-400 hover:text-red-600 transition-colors" title="Eliminar">
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="py-16 text-center text-stone-400 font-medium">
                            No hay servicios registrados. ¬°Crea el primero!
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
